<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/unidades">

        <ListPreference
            app:defaultValue="metric"
            app:entries="@array/temperature_entries"
            app:entryValues="@array/temperature_values"
            app:key="temperature"
            app:title="Temperatura"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="mph"
            app:entries="@array/wind_entries"
            app:entryValues="@array/wind_values"
            app:key="wind"
            app:title="Velocidade do vento"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
