<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <TextView
            android:id="@+id/text_forecast_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/11"
            android:textColor="@color/white70"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/text_forecast_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12h00"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_forecast_date"
            android:layout_marginTop="4dp"
            />

        <ImageView
            android:id="@+id/icon_forecast_weather"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/text_forecast_hour"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/weather10d" />

        <TextView
            android:id="@+id/text_forecast_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21&#176;"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/icon_forecast_weather"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/text_forecast_clouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:layout_below="@id/text_forecast_temperature"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_cloudy"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:drawablePadding="8dp"
            />

        <TextView
            android:id="@+id/text_forecast_tempmax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_forecast_clouds"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_arrow_up_16dp"
            android:text="24&#176;"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/text_forecast_tempmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_forecast_tempmax"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_arrow_down_16dp"
            android:text="16&#176;"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/text_forecast_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40%"
            android:layout_below="@id/text_forecast_tempmin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_drops"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:drawablePadding="8dp"
            />

        <TextView
            android:id="@+id/text_forecast_winddirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_forecast_humidity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="North"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/text_forecast_windspeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_forecast_winddirection"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="16 km/h"
            android:textColor="@color/white70"
            android:textSize="16sp"
            android:textAlignment="center"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>